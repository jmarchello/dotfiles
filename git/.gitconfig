[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
[user]
	email = josh@jmarchello.com
	name = Josh Marchello
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[diff]
	tool = vimdiff3
  guitool = vimdiff3
[merge]
  tool = vimdiff3
[status]
	short = true
[mergetool]
	keepBackup = false
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[fetch]
	prune = true
[pull]
	rebase = false
[difftool "vimdiff3"]
  path = nvim
  prompt = false
[mergetool "vimdiff3"]
  layout = LOCAL,MERGED,REMOTE
  path = nvim
