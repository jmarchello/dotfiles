[core]
	excludesfile = ~/.gitignore_global
	editor = e
	pager = delta
[user]
	email = josh@jmarchello.com
	name = Josh Marchello
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[diff]
	tool = vimdiff
	colorMoved = default
[merge]
	tool = vimdiff
[status]
	short = true
[mergetool]
	keepBackup = false
[alias]
	amend = commit --amend
	heatmap = !git-heatmap
	open = !/usr/bin/gh browse \"$@\"
	aa = add --all
	files = !git diff --name-only $(git merge-base HEAD \"$REVIEW_BASE\")
	stat = !git diff --stat $(git merge-base HEAD \"$REVIEW_BASE\")
	review = !lvim -p $(git files) +\"tabdo Ghdiffsplit $REVIEW_BASE\" +\"let g:gitgutter_diff_base = '$REVIEW_BASE'\"
	reviewone = !lvim -p +\"tabdo Gvdiffsplit $REVIEW_BASE\" +\"let g:gitgutter_diff_base = \"$REVIEW_BASE\"
	ca = commit --amend
	caa = !git aa && git ca
	pull-main = !git fetch origin \"$REVIEW_BASE\":\"$REVIEW_BASE\"
	mt = mergetool
	co = checkout
	pr = !gh pr checkout
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = fals
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
[fetch]
	prune = true
[pull]
	rebase = false
